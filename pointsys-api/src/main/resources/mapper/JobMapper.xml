<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="jp.co.nri.point.api.mapper.JobMapper">

  <resultMap type="jp.co.nri.point.api.domain.JobModel" id="jobMap">
    <id column="id" property="id"></id>
    <result column="jobname" property="jobName" />
    <result column="description" property="description" />
    <result column="cron" property="cron" />
    <result column="springbeanname" property="springBeanName" />
    <result column="methodname" property="methodName" />
    <result column="issysjob" property="isSysJob" />
    <result column="status" property="status" />
    <result column="createtime" property="createTime" />
    <result column="updatetime" property="updateTime" />
  </resultMap>

  <sql id="where">
    <where>
      <if test="params.description != null and params.description != ''">
        and t.description like concat('%', #{params.description}, '%')
      </if>
      <if test="params.status != null and params.status != ''">
        and t.status = #{params.status}
      </if>
    </where>
  </sql>

  <select id="selectAll" resultMap="jobMap">
    SELECT *
    FROM t_job t
  </select>

  <select id="selectAllByParams" resultMap="jobMap">
    SELECT *
    FROM t_job t
    <include refid="where" />
  </select>

  <select id="selectCount" resultType="long">
    SELECT count(1) 
    FROM t_job t
  </select>

  <select id="selectCountByParams" resultType="long">
    SELECT count(1) 
    FROM t_job t
    <include refid="where" />
  </select>

  <delete id="deleteByPrimaryKey" parameterType="long">
    DELETE FROM
    t_job WHERE t_job.id=#{id}
  </delete>

  <insert id="insert" parameterType="jp.co.nri.point.api.domain.JobModel">
    INSERT INTO t_dept (id,name,description)
    VALUES
    (default,#{name},#{description})
  </insert>

  <select id="selectByPrimaryKey" resultMap="jobMap">
    SELECT *
    FROM t_job
    WHERE t_job.id=#{id}
  </select>

  <select id="getByName" resultMap="jobMap">
    SELECT *
    FROM t_job
    WHERE t_job.jobname=#{jobName}
  </select>

  <update id="updateByPrimaryKey" parameterType="jp.co.nri.point.api.domain.JobModel">
    UPDATE
    t_job
    <set>
      <if test="name != null">
        name = #{name},
      </if>
      description = #{description}
    </set>
    WHERE t_dept.id=#{id}
  </update>

</mapper>